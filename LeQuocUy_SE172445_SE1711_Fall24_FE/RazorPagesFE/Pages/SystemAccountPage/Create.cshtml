@page
@model RazorPagesFE.Pages.SystemAccountPage.CreateModel

@{
    ViewData["Title"] = "Create New Account";
}

<h1>Create New Account</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">@Model.Message</div>
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountName"></label>
        <input asp-for="SystemAccount.AccountName" class="form-control" />
        <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountEmail"></label>
        <input asp-for="SystemAccount.AccountEmail" class="form-control" />
        <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountRole"></label>
        <select asp-for="SystemAccount.AccountRole" class="form-control">
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
        </select>
        <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountPassword"></label>
        <input asp-for="SystemAccount.AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-page="./Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
