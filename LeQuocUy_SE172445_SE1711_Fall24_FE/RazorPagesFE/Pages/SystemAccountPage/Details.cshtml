@page "{id}"
@model RazorPagesFE.Pages.SystemAccountPage.DetailsModel

@{
    ViewData["Title"] = "Account Details";
}

<h1>Account Details</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-danger">@Model.Message</div>
}
else
{
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.SystemAccount.AccountName</dd>

            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.SystemAccount.AccountEmail</dd>

            <dt class="col-sm-2">Role</dt>
            <dd class="col-sm-10">
                @if (Model.SystemAccount.AccountRole == 0)
                {
                    <span>Admin</span>
                }
                else if (Model.SystemAccount.AccountRole == 1)
                {
                    <span>Staff</span>
                }
                else
                {
                    <span>Lecturer</span>
                }
            </dd>
        </dl>
    </div>

    <a asp-page="./Edit" asp-route-id="@Model.SystemAccount.AccountId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
}
