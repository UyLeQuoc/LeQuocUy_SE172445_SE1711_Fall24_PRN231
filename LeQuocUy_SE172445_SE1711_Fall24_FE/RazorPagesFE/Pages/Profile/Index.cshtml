@page
@model RazorPagesFE.Pages.Profile.IndexModel

@{
    ViewData["Title"] = "Profile";
}

<h1>Profile</h1>

<form method="post">
    <input type="hidden" asp-for="SystemAccount.AccountId" />
    <div class="form-group">
        <label asp-for="SystemAccount.AccountName"></label>
        <input asp-for="SystemAccount.AccountName" class="form-control" />
        <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountEmail"></label>
        <input asp-for="SystemAccount.AccountEmail" class="form-control" disabled />
        <input type="hidden" asp-for="SystemAccount.AccountEmail" />
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountPassword"></label>
        <input asp-for="SystemAccount.AccountPassword" class="form-control" type="password" />
        <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SystemAccount.AccountRole"></label>
        <input asp-for="SystemAccount.AccountRole" class="form-control" disabled />
        <input type="hidden" asp-for="SystemAccount.AccountRole" />
    </div>

    <button type="submit" class="btn btn-primary">Update Profile</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}
