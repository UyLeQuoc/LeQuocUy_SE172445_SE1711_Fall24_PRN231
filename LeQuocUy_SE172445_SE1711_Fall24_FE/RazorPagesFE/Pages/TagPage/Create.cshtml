@page
@model RazorPagesFE.Pages.TagPage.CreateModel

@{
    ViewData["Title"] = "Create Tag";
}

<h1>Create New Tag</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Tag.TagName"></label>
        <input asp-for="Tag.TagName" class="form-control" />
        <span asp-validation-for="Tag.TagName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tag.Note"></label>
        <input asp-for="Tag.Note" class="form-control" />
        <span asp-validation-for="Tag.Note" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
