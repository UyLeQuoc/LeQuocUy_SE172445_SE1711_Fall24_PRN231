@page "{id}"
@model RazorPagesFE.Pages.TagPage.DeleteModel

@{
    ViewData["Title"] = "Delete Tag";
}

<h1>Delete Tag</h1>

<h3>Are you sure you want to delete this tag?</h3>

<div>
    <h4>Tag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tag Name</dt>
        <dd class="col-sm-10">@Model.Tag.TagName</dd>
        <dt class="col-sm-2">Note</dt>
        <dd class="col-sm-10">@Model.Tag.Note</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Tag.TagId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
