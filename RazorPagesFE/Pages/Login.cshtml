@page
@model RazorPagesFE.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="text" asp-for="Email" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" asp-for="Password" />
    </div>
    <div>
        <button type="submit">Login</button>
    </div>
    @if (Model.Message != null)
    {
        <p>@Model.Message</p>
    }
</form>
